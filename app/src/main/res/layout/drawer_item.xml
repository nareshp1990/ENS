<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navDrawerMenuView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_menu_layout_height"
    android:background="@drawable/ripple_effect"
    android:gravity="center|left"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/nav_drawer_menu_layout_padding_left">

    <ImageView
        android:id="@+id/navDrawerMenuItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email_black_18dp" />

    <TextView
        android:id="@+id/navDrawerMenuItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_drawer_menu_item_text_margin_left"
        android:text="Menu Item"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/nav_drawer_menu_item_text_size" />
</LinearLayout>